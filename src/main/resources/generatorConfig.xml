<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE generatorConfiguration PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd" >
<generatorConfiguration>
    <!-- 引入配置文件 -->
    <properties resource="properties/generator.properties"/>

    <!-- 指定数据连接驱动jar地址 -->
    <classPathEntry location="${classPath}"/>

    <!-- 一个数据库一个context  -->
    <context id="db_base" targetRuntime="MyBatis3Simple" defaultModelType="flat">

        <!-- 注释 -->
        <commentGenerator>
            <property name="suppressAllComments" value="true"/><!-- 是否取消注释 -->
            <property name="suppressDate" value="true"/> <!-- 是否生成注释代时间戳-->
        </commentGenerator>

        <!-- jdbc连接 -->
        <jdbcConnection driverClass="${jdbc_driver}"
                        connectionURL="${jdbc_url}" userId="${jdbc_user}"
                        password="${jdbc_password}"/>

        <!-- 类型转换 -->
        <javaTypeResolver>
            <!-- 是否使用bigDecimal， false可自动转化以下类型（Long, Integer, Short, etc.） -->
            <property name="forceBigDecimals" value="false"/>
        </javaTypeResolver>

        <!-- 生成实体类地址 -->
        <javaModelGenerator targetPackage="com.demo.angularpractice.entity"
                            targetProject="${project_model}">
            <property name="enableSubPackages" value="true"/>
            <!-- 是否针对string类型的字段在set的时候进行trim调用 -->
            <property name="trimStrings" value="true"/>
        </javaModelGenerator>

        <!-- 生成mapxml文件 -->
        <sqlMapGenerator targetPackage="mapper"
                         targetProject="${project_xml}">
            <property name="enableSubPackages" value="true"/>
        </sqlMapGenerator>


        <!-- 生成mapxml对应client，也就是接口dao -->
        <javaClientGenerator targetPackage="com.demo.angularpractice.repository"
                             targetProject="${project_client}" type="XMLMAPPER">
            <property name="enableSubPackages" value="true"/>
        </javaClientGenerator>


        <table tableName="users" domainObjectName="User"
               enableCountByExample="false"
               enableDeleteByExample="false" enableSelectByExample="true"
               enableUpdateByExample="false">
        </table>
        <table tableName="roles" domainObjectName="Role"
               enableCountByExample="false"
               enableDeleteByExample="false" enableSelectByExample="true"
               enableUpdateByExample="false">
        </table>
        <table tableName="resources" domainObjectName="Resource"
               enableCountByExample="false"
               enableDeleteByExample="false" enableSelectByExample="true"
               enableUpdateByExample="false">
        </table>
        <table tableName="user_role" domainObjectName="UserRole"
               enableCountByExample="false"
               enableDeleteByExample="false" enableSelectByExample="true"
               enableUpdateByExample="false">
        </table>
        <table tableName="role_resource" domainObjectName="RoleResource"
               enableCountByExample="false"
               enableDeleteByExample="false" enableSelectByExample="true"
               enableUpdateByExample="false">
        </table>

    </context>

</generatorConfiguration>